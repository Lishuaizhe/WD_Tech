<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/login_background"
        tools:ignore="MissingConstraints"
        tools:context=".activity.RegisterActivity">

    <ImageView
            android:layout_width="64dp"
               android:layout_height="64dp"
            android:id="@+id/register_img"
            android:src="@mipmap/logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="128dp"
    />

    <EditText
        android:id="@+id/register_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_img"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:hint="昵称"
        android:textColorHint="#eeeeee"
        android:textSize="18sp"
        android:paddingLeft="50dp"
        android:paddingBottom="@dimen/dp_10"
        android:textColor="#eeeeee"
        android:background="@null"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1AFFFFFF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_name"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"/>



    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/register_icon_name"
            app:layout_constraintLeft_toLeftOf="@+id/register_name"
            app:layout_constraintTop_toTopOf="@+id/register_name"/>

    <EditText
            android:id="@+id/register_phone"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_name"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp"
            android:hint="手机号"
            android:textColorHint="#eeeeee"
            android:textSize="18sp"
            android:paddingLeft="50dp"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="#eeeeee"
            android:background="@null"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1AFFFFFF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_phone"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"/>



    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/login_icon_phone"
            app:layout_constraintLeft_toLeftOf="@+id/register_phone"
            app:layout_constraintTop_toTopOf="@+id/register_phone"/>


    <EditText
            android:id="@+id/register_pwd"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_phone"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="30dp"
            android:hint="密码"
            android:inputType="textPassword"
            android:textColorHint="#eeeeee"
            android:textSize="18sp"
            android:paddingLeft="50dp"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="#eeeeee"
            android:background="@null"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1AFFFFFF"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_pwd"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"/>

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/login_icon_lock"
            app:layout_constraintLeft_toLeftOf="@+id/register_pwd"
            app:layout_constraintTop_toTopOf="@+id/register_pwd"/>

    <CheckBox
            android:id="@+id/login_toshow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@mipmap/login_icon_eye_n"
            app:layout_constraintRight_toRightOf="@+id/register_pwd"
            app:layout_constraintTop_toTopOf="@+id/register_pwd"
            app:layout_constraintBottom_toBottomOf="@+id/register_pwd"
    />



    <TextView
            android:id="@+id/login_fast_reg"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="短信验证注册"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            app:layout_constraintTop_toBottomOf="@+id/register_pwd"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/dp_40"/>


    <Button
            android:id="@+id/register_btn"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginBottom="96dp"
            android:textSize="18sp"
            android:text="注册"
            android:background="@drawable/shape_login_but"
            android:textColor="#FFFFFF"/>


</android.support.constraint.ConstraintLayout>